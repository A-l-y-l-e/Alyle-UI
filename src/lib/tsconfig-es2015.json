{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "module": "es2015",
    "target": "es2015",
    "baseUrl": ".",
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "inlineSources": true,
    "outDir": "BASE_URL../build/NAME_PACKAGE/es2015",
    "sourceMap": true,
    "rootDir": "BASE_URL",
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "paths": {
      "alyle-ui/core": ["BASE_URLcore/"],
      "alyle-ui/icon-button": ["BASE_URLicon-button/"],
      "alyle-ui/button": ["BASE_URLbutton/"],
      "alyle-ui/tabs": ["BASE_URLtabs/"],
      "alyle-ui/ripple": ["BASE_URLripple/"],
      "alyle-ui/radio": ["BASE_URLradio/"],
      "alyle-ui/ls": ["BASE_URLls/"],
      "alyle-ui/drawer": ["BASE_URLdrawer/"],
      "alyle-ui/menu": ["BASE_URLmenu/"],
      "alyle-ui/toolbar": ["BASE_URLtoolbar/"],
      "alyle-ui/svg": ["BASE_URLsvg/"],
      "alyle-ui/responsive": ["BASE_URLresponsive/"],
      "alyle-ui/shadow": ["BASE_URLshadow/"],
      "alyle-ui/carousel": ["BASE_URLcarousel/"],
      "alyle-ui/input": ["BASE_URLinput/"],
      "alyle-ui/header-pagination": ["BASE_URLheader-pagination/"],
      "alyle-ui/resizing-cropping-images": ["BASE_URLresizing-cropping-images/"],
      "alyle-ui/date-picker": ["BASE_URLdate-picker/"]
    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": false,
    "skipTemplateCodegen": true,
    "fullTemplateTypeCheck": true
  }
}
