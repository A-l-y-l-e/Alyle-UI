{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "module": "es2015",
    "target": "es2015",
    "baseUrl": ".",
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "inlineSources": true,
    "outDir": "BASE_URL../build/NAME_PACKAGE/es2015",
    "sourceMap": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "paths": { }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ],
  "files": [
    "index.ts"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableSummariesForJit": false
  }
}
