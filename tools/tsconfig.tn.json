{
  "compilerOptions": {
    "outDir": "../dist/dev-tools",
    "target": "es2020",
    "lib": ["es2020"],
    "module": "ESNext",
    "baseUrl": "./",
    "types": ["node"],
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "esModuleInterop": true
  },
  "exclude": [
    "src/lib/**/*.specx.ts"
  ]
}
