{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "baseUrl": "src",
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/node-vibrant/lib/index.d.ts"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "alyle-ui": ["lib/"],
      "alyle-ui/core": ["lib/core/"],
      "alyle-ui/icon-button": ["lib/icon-button/"],
      "alyle-ui/button": ["lib/button/"],
      "alyle-ui/tabs": ["lib/tabs/"],
      "alyle-ui/ripple": ["lib/ripple/"],
      "alyle-ui/ripple-minimal": ["lib/ripple-minimal/"],
      "alyle-ui/radio": ["lib/radio/"],
      "alyle-ui/ls": ["lib/ls/"],
      "alyle-ui/drawer": ["lib/drawer/"],
      "alyle-ui/drawer-minimal": ["lib/drawer-minimal/"],
      "alyle-ui/menu": ["lib/menu/"],
      "alyle-ui/toolbar": ["lib/toolbar/"],
      "alyle-ui/svg": ["lib/svg/"],
      "alyle-ui/responsive": ["lib/responsive/"],
      "alyle-ui/shadow": ["lib/shadow/"],
      "alyle-ui/carousel": ["lib/carousel/"],
      "alyle-ui/input": ["lib/input/"],
      "alyle-ui/header-pagination": ["lib/header-pagination/"],
      "alyle-ui/resizing-cropping-images": ["lib/resizing-cropping-images/"],
      "alyle-ui/date-picker": ["lib/date-picker/"]
    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
