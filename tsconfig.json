{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "baseUrl": "./",
    "declaration": false,
    "downlevelIteration": true,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@alyle/ui": ["./src/lib"],
      "@alyle/ui/icon": ["./src/lib/icon"],
      "@alyle/ui/button": ["./src/lib/button"],
      "@alyle/ui/tabs": ["./src/lib/tabs"],
      "@alyle/ui/radio": ["./src/lib/radio"],
      "@alyle/ui/drawer": ["./src/lib/drawer"],
      "@alyle/ui/menu": ["./src/lib/menu"],
      "@alyle/ui/toolbar": ["./src/lib/toolbar"],
      "@alyle/ui/responsive": ["./src/lib/responsive"],
      "@alyle/ui/carousel": ["./src/lib/carousel"],
      "@alyle/ui/image-cropper": ["./src/lib/image-cropper"],
      "@alyle/ui/themes/minima": ["./src/lib/themes/minima"],
      "@alyle/ui/card": ["./src/lib/card"],
      "@alyle/ui/typography": ["./src/lib/typography"],
      "@alyle/ui/grid": ["./src/lib/grid"],
      "@alyle/ui/badge": ["./src/lib/badge"],
      "@alyle/ui/field": ["./src/lib/field"],
      "@alyle/ui/checkbox": ["./src/lib/checkbox"],
      "@alyle/ui/snack-bar": ["./src/lib/snack-bar"],
      "@alyle/ui/tooltip": ["./src/lib/tooltip"],
      "@alyle/ui/avatar": ["./src/lib/avatar"],
      "@alyle/ui/list": ["./src/lib/list"],
      "@alyle/ui/divider": ["./src/lib/divider"],
      "@alyle/ui/select": ["./src/lib/select"],
      "@alyle/ui/dialog": ["./src/lib/dialog"],
      "@alyle/ui/expansion": ["./src/lib/expansion"],
      "@alyle/ui/slider": ["./src/lib/slider"],
      "@alyle/ui/color": ["./src/lib/color"],
      "@alyle/ui/skeleton": ["./src/lib/skeleton"],
      "@alyle/ui/schematics/testing": ["./src/lib/schematics/testing"],
      "@env/*": ["./src/environments/*"],
      "@shared/*": ["./src/app/shared/*"],
      "@app/*": ["./src/app/*"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
