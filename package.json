{
  "name": "alyle-ui",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "start": "ng serve --port 1111",
    "build": "yarn build:browser && yarn build:server && prerender",
    "build:browser": "ng build --prod --build-optimizer",
    "build:server": "ng run alyle-ui:server",
    "build:package": "rm -rf .tmp dist build && gulp build:package",
    "publish:package": "yarn build && yarn deploy && yarn build:package && cd build && yarn publish",
    "serve": "yarn build && firebase serve only hosting",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "deploy": "firebase deploy",
    "functions:install": "cd functions && yarn install",
    "mv:index.html": "mkdir functions/dist && mv dist/index.html functions/dist/"
  },
  "private": true,
  "dependencies": {
    "@angular-devkit/build-angular": "^0.5.7",
    "@angular/animations": "^6.0.0-rc.5",
    "@angular/common": "^6.0.0-rc.5",
    "@angular/compiler": "^6.0.0-rc.5",
    "@angular/core": "^6.0.0-rc.5",
    "@angular/forms": "^6.0.0-rc.5",
    "@angular/platform-browser": "^6.0.0-rc.5",
    "@angular/platform-browser-dynamic": "^6.0.0-rc.5",
    "@angular/platform-server": "^6.0.0-rc.5",
    "@angular/router": "^6.0.0-rc.5",
    "@angular/service-worker": "^6.0.0-rc.5",
    "@nguniversal/module-map-ngfactory-loader": "^5.0.0",
    "angular-module-builder-cli": "^0.0.2",
    "chroma-js": "^1.3.6",
    "core-js": "^2.5.4",
    "disable-scroll": "^0.4.0",
    "hammerjs": "^2.0.8",
    "node-vibrant": "^3.0.0",
    "prismjs": "^1.6.0",
    "rxjs": "^6.0.0",
    "ts-loader": "^4.0.1",
    "zone.js": "^0.8.24"
  },
  "devDependencies": {
    "@alyle/angular-prerender": "^0.4.0",
    "@angular/cli": "^6.0.0-rc.5",
    "@angular/compiler-cli": "^6.0.0-rc.5",
    "@angular/http": "^6.0.0-rc.5",
    "@types/chroma-js": "^1.3.3",
    "@types/google.analytics": "^0.0.38",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "chalk": "^2.3.2",
    "codelyzer": "4.2.1",
    "del": "^3.0.0",
    "firebase-tools": "^3.17.4",
    "fs-extra": "^5.0.0",
    "gulp": "^3.9.1",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^0.6.1",
    "gulp-rollup": "^2.15.0",
    "gulp-watch": "^5.0.0",
    "jasmine-core": "^3.1.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "node-sass-tilde-importer": "^1.0.0",
    "protractor": "~5.3.0",
    "rollup": "^0.56.0",
    "rollup-plugin-uglify": "^3.0.0",
    "run-sequence": "^2.2.0",
    "size-limit": "^0.16.2",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "typescript": "~2.7.2"
  },
  "greenkeeper": {
    "ignore": [
      "typescript"
    ]
  },
  "size-limit": [
    {
      "path": "dist-amb/**/*.umd.min.js",
      "webpack": false,
      "gzip": false,
      "limit": "150 KB"
    }
  ]
}
