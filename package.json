{
  "name": "alyle-ui-srcs",
  "version": "1.7.0-beta.3wtkb",
  "license": "MIT",
  "scripts": {
    "start": "ng serve --port 1111",
    "hmr": "ng serve --port 1111 --hmr",
    "build": "yarn build:browser && yarn build:server && prerender && yarn sw:update",
    "build:browser": "ng build alyle-ui --prod",
    "build:server": "ng run alyle-ui:server",
    "build:package": "rm -rf .tmp dist build && gulp build:package",
    "publish:package": "yarn build && yarn deploy && yarn build:package && cd build && yarn publish",
    "serve": "yarn build && firebase serve only hosting",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "deploy": "firebase deploy",
    "functions:install": "cd functions && yarn install",
    "mv:index.html": "mkdir functions/dist && mv dist/index.html functions/dist/",
    "build:tools": "rm -rf dist && tsc -p tools",
    "w:tools": "rm -rf dist/tools && tsc -p tools -w",
    "build:@alyle/ui": "node dist/tools/build-lib && node dist/tools/copy-readme",
    "build:universal": "rm -rf dist/server && tsc -p server && yarn build:browser && yarn build:server",
    "serve:universal": "node dist/server",
    "sw:update": "node dist/tools/update-sw",
    "tools:prepare-lib": "node dist/tools/prepare-lib",
    "tools:bump-version": "node dist/tools/bump-version && yarn changelog",
    "tools:deploy": "node dist/tools/deploy",
    "tools:compodoc": "node dist/tools/compodoc",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "bundlesizelimit": "rm -rf dist/bundle.js && cat dist/@alyle/ui/**/*.umd.min.js >> dist/bundle.js && yarn bundlesize -f dist/bundle.js -c false -s '150 KB'"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.0",
    "@angular/common": "^6.1.0",
    "@angular/compiler": "^6.1.0",
    "@angular/core": "^6.1.0",
    "@angular/forms": "^6.1.0",
    "@angular/platform-browser": "^6.1.0",
    "@angular/platform-browser-dynamic": "^6.1.0",
    "@angular/platform-server": "^6.1.0",
    "@angular/pwa": "^0.7.1",
    "@angular/router": "^6.1.0",
    "@angular/service-worker": "^6.1.0",
    "@nguniversal/express-engine": "^6.0.0",
    "@nguniversal/module-map-ngfactory-loader": "^6.0.0",
    "chroma-js": "^1.3.7",
    "core-js": "^2.5.7",
    "disable-scroll": "^0.4.0",
    "express": "^4.16.3",
    "hammerjs": "^2.0.8",
    "prismjs": "^1.15.0",
    "rxjs": "^6.2.2",
    "tsickle": "^0.27.2",
    "tslib": "^1.9.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@alyle/angular-prerender": "^0.4.0",
    "@angular-devkit/build-angular": "^0.7.1",
    "@angular-devkit/build-ng-packagr": "^0.7.1",
    "@angular/cli": "^6.1.1",
    "@angular/compiler-cli": "^6.1.0",
    "@angular/http": "^6.1.0",
    "@angularclass/hmr": "^2.1.3",
    "@compodoc/compodoc": "^1.1.3",
    "@stackblitz/sdk": "^1.2.0",
    "@types/chroma-js": "^1.3.3",
    "@types/google.analytics": "^0.0.38",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "bundlesize": "^0.17.0",
    "camelcase": "^5.0.0",
    "chalk": "^2.4.1",
    "codelyzer": "^4.4.2",
    "conventional-changelog-cli": "^2.0.1",
    "firebase-tools": "^3.18.4",
    "fs-extra": "^6.0.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "^4.2.1",
    "js-yaml": "^3.11.0",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "~1.4.2",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-mocha-reporter": "^2.2.5",
    "ng-packagr": "^3.0.6",
    "protractor": "~5.4.0",
    "ts-node": "~5.0.1",
    "tslint": "~5.10.0",
    "typescript": "^2.7.2"
  },
  "greenkeeper": {
    "ignore": [
      "typescript"
    ]
  }
}